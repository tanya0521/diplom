%h1 Роли

= link_to 'Добавить роль', new_role_path, class: "btn btn-primary"

%table.table.table-hover.table-condensed
  %thead
    %tr
      %th.tbl-width65.text-center  Название
      %th.tbl-width65.text-center  Информация
      %th.tbl-width65.text-center  Полная информация
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td.tbl-width65.text-center = role.name
        %td.tbl-width65.text-center = role.info
        %td.tbl-width65.text-center = role.full_info
        %td= link_to 'Показать', role, class: "btn btn-primary"
        %td= link_to 'Редактировать', edit_role_path(role), class: "btn btn-warning"
        %td= link_to 'Удалить', role, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-danger"

%br

