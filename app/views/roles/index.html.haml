%h1 Роли

= link_to 'Добавить роль', new_role_path, class: "btn btn-primary"

%table.table
  %thead
    %tr
      %th Название
      %th Информация
      %th Полная информация
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.info
        %td= role.full_info
        %td= link_to 'Показать', role, class: "btn btn-primary"
        %td= link_to 'Редактировать', edit_role_path(role), class: "btn btn-warning"
        %td= link_to 'Удалить', role, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-danger"

%br

