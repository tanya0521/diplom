%h1 
  Источники финансирования
  .pull-right{style: "padding-top: 1rem"}
    = link_to 'Добавить источник финансирования', new_financing_path, class: "btn btn-primary"
  .clearfix

%table.table.table-hover.table-condensed
  %thead
    %tr
      %th.tbl-width65.text-center Название источника финансирования
      %th.tbl-width65.text-center Сумма финансирования
      %th.tbl-width65.text-center Факультет
      %th.tbl-width65.text-center Период выплаты стипендии
      %th.tbl-width65.text-center Вид стипендии
      %th{style: 'width: 400px'}

  %tbody
    - @financings.each do |financing|
      %tr
        %td.tbl-width65.text-center= financing.name_financing
        %td.tbl-width65.text-center= financing.suum
        %td.tbl-width65.text-center
          = financing.faculty.namef
        %td.tbl-width65.text-center
          = l(financing.scholarship_period.begin)
          \— 
          = l(financing.scholarship_period.end)
        %td.tbl-width65.text-center= financing.type_scholarship_id
        %td{style: 'width: 400px'}
          = link_to 'Расчет', financing, class: "btn btn-primary btn-fixed-size"
          = link_to 'Добавить приказ', financing, class: "btn btn-success btn-fixed-size"
          %br
          = link_to 'Редактировать', edit_financing_path(financing), class: "btn btn-warning btn-fixed-size"
          = link_to 'Удалить', financing, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger btn-fixed-size"
      

%br


