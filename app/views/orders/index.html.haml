%h1 
  Приказы
  .pull-right{style: "padding-top: 1rem"}
    = link_to 'Добавить приказ', new_order_path, class: "btn btn-primary"
  .clearfix

%table.table.table-hover.table-condensed
  %thead
    %tr
      %th.tbl-width65.text-center Номер
      %th.tbl-width65.text-center Дата
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td.tbl-width65.text-center= order.number
        %td.tbl-width65.text-center= order.data
        %td= link_to 'Показать', order, class: "btn btn-primary"
        %td= link_to 'Редактировать', edit_order_path(order), class: "btn btn-warning"
        %td= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger"


%br

