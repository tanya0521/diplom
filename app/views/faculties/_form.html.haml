= form_for @faculty do |f|
  - if @faculty.errors.any?
    #error_explanation

      %h2= "#{pluralize(@faculty.errors.count, "error")} prohibited this faculty from being saved:"
      %ul
        - @faculty.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-6
      .form-group
        = f.label :"Название"
        = f.text_area :namef, class: 'form-control'
        = f.error_messages_for(:namef)
  .row
    .col-md-6 
      .form-group
        = f.label :"Группа"
        = f.text_field :groups, class: 'form-control'
  .form-actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', faculties_path, class: "btn btn-primary"
